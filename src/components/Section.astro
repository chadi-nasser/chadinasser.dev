---
interface SectionProps {
  title: string
  description: string
}

import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card"


const { title, description } = Astro.props as SectionProps;
---
<Card className="mt-6">
  <CardHeader>
    <CardTitle className="text-2xl text-primary">{title}</CardTitle>
    <CardDescription className="text-md">{description}</CardDescription>
  </CardHeader>
  <CardContent className="text-lg">
    <slot />
  </CardContent>
</Card>
