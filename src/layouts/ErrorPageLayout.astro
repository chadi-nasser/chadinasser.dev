---
import type { MarkdownLayoutProps } from 'astro';
type Props = MarkdownLayoutProps<{
  emoji: string;
  errorCode: string;
  errorMessage: string;
}>;

import MainLayout from '@/layouts/MainLayout.astro'
const { frontmatter: {emoji, errorCode, errorMessage} } = Astro.props
---
<MainLayout>
  <div class="flex-1 flex flex-col gap-y-10 justify-center items-center">
    <span class="text-9xl">{emoji}</span>
    <h1 class="text-2xl sm:text-4xl truncate">
      <strong>{errorCode}</strong> -
      {errorMessage}
    </h1>
    <a href="/" class="mt-10 text-lg sm:text-2xl text-muted-foreground decoration-dotted underline-offset-8 hover:text-foreground hover:underline">&gt; here is the way back &lt;</a>
  </div>
</MainLayout>